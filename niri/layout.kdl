layout {
    gaps 2
    center-focused-column "never"
    preset-column-widths {
        proportion 0.25
        proportion 0.5
        proportion 0.75
        proportion 1.0
    }
    default-column-width { proportion 0.5; }
    focus-ring {
      width 2
      active-color "#7fc8ff"
      inactive-color "#505050"
    }
}
